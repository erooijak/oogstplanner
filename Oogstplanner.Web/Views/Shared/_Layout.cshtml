<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="utf-8">

    <title>@ViewBag.Title | Oogstplanner</title>

    @Styles.Render("~/Content/Stylesheets/bootstrap.min.css")
    @Styles.Render("~/Content/Stylesheets/bootstrap-dialog.min.css")
    @Styles.Render("~/Content/Stylesheets/bootstrap")
    @Styles.Render("~/Content/Stylesheets/oogstplanner.responsive-squares")

    <!--[if lte IE 8]>
        <script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/es5-shim/4.0.3/es5-shim.min.js"></script>
        <script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv-printshiv.min.js"></script>
        <script type="text/javascript" language="javascript" src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/oogstplanner")

</head>
<body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" 
                    data-toggle="collapse" data-target="#navbar" 
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Navigatie</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">OogstPlanner.nl</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Welkom", "Index",  "Home",  null, null)</li>
                <li>@Html.ActionLink("Zaaien en oogsten", "SowingAndHarvesting",  "Home",  null, null)</li>
                <li>@Html.ActionLink("Zaaikalender", "Year",  "Calendar",  null, null)</li>
            </ul>

@if (Request.IsAuthenticated)
{
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
                                role="button" aria-expanded="false">Mijn profiel <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Bekijken", "Info",  "Account",  null, null)</li>
                        <!-- <li><a href="/Account/Edit">TODO: Aanpassen</a></li> -->
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Uitloggen", "Logoff",  "Account",  null, null)    </li>
                    </ul>
                </li>
            </ul>
}
else
{
            <ul class="nav navbar-nav navbar-right">
                <li id="registerOrLogin"><a href="#">De oogstplanner gemeenschap&nbsp;</a></li>
            </ul>
}

        </div><!--End collapsible navbar -->
    </nav>
        
    @* Validation of JavaScript and cookies *@
    @{ Html.RenderPartial("_BrowserValidation"); }

    <div class="container">
    	@RenderBody()
    </div>

</body>
</html>
