@model User

@{
    ViewBag.Title = "Gebruikerspagina";
}

<div id="top"></div>

@if (Model == null)
{
    <div class="row">
        <div class="col-lg-4 col-md-3 col-sm-2 col-xs-2"></div>
        <div class="col-lg-4 col-md-6 col-sm-8 col-xs-8">
            <div class="panel panel-default dark">
                <div class="panel-heading">
                    <h1 class="panel-title"><strong>@ViewBag.Message</strong></h1>
                </div>
                <p>
                    <span class="glyphicon glyphicon-heart-empty"></span>&nbsp;Deze gebruiker bestaat niet.<br/><br/>
                    Hier zijn andere zinvolle pagina's:<br/>
                    @Html.ActionLink("Oogst of zaai een gewas", "SowingAndHarvesting",  "Home",  null, null)<br/>
                    <!--@Html.ActionLink("Vind een andere gebruiker", "TODO",  "TODO",  null, null)<br/>-->
                    @Html.ActionLink("Bekijk je kalender", "Year",  "Calendar",  null, null)<br/>
                    <!--@Html.ActionLink("Veelgestelde vragen lijst (FAQ)", "TODO",  "TODO",  null, null)<br/>-->
                    ...of ga terug naar de <strong>@Html.ActionLink("OogstPlanner.nl Welkomstpagina", "Index",  "Home",  null, null)</strong>
                </p>
            </div>
        </div>
        <div class="col-lg-4 col-md-3 col-sm-2 col-xs-2"></div>
    </div>
}
else
{
    <!-- User profile adjusted from http://bootsnipp.com/snippets/featured/simple-user-profile by lynx-->
    <div class="container">
        <div class="row">
            <div class="col-md-5 toppad pull-right col-md-offset-3">
                <br>		
                <p class=" text-info"></p>
            </div>
        	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Model.Name</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3" align="center">
                                <img alt="User Pic" 
                                     src="/Content/Images/social.jpg" 
                                     class="img-circle">
                            </div>
                            <div class="col-md-9 col-lg-9"> 
                                <table class="table table-user-information form-text">
                                    <tbody>
                                        <tr>
                                            <td>Naam:</td>
                                            <td>@Model.FullName</td>
                                        </tr>
                                        <tr>
                                            <td>Aanmaakdatum:</td>
                                            <td>@Model.CreationDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <td>Kalenders:</td>
                                            @foreach (var c in Model.Calendars)
                                            {
                                                <td>@c.Name<br/>
                                                <i>Aantal likes: <strong>@c.Likes.Count()</strong></i></td>
                                            }
                                        </tr> 
                                	</tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Styles.Render("~/Content/Stylesheets/bootstrap-profile")
