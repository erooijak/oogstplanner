@model LostPasswordModel

@using (Html.BeginForm("LostPassword", "Account", null, FormMethod.Post, 
    new { @class = "form-signin", @role = "form"}))
{
   <div class="form-group">
        @Html.ValidationSummary()  
    </div>

    <h2 class="form-signin-heading dark">Wachtwoord vergeten?</h2>

    @Html.LabelFor(m => m.Email, new { @class="sr-only" })
    @Html.TextBoxFor(m => m.Email, 
        new { @class = "form-control", @type = "email", @placeholder = "E-mailadres" })
    <br/>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Verstuur wachtwoord reset link</button>

    <h2 class="form-text">@ViewBag.Message</h2>

    <div class="form-group">
        <div class="col-md-12 control">
            <div class="box-border dark">
                @Html.ActionLink("Terug naar inloggen.", "Login")
            </div>
        </div>
    </div>  

}
