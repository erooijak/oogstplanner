@{
    ViewBag.Title = "Welkom";
}

@* START RESPONSIVE RECTANGLE LAYOUT *@

@* Top bar *@
<div id="top"></div>
   
@* Fixed main screen *@
<div id="login" class="bg imglogin">

    <div class="row" id="main-row">
        <div class="col-lg-6 col-xs-12">
            <div class="jumbotron-box">
                <div class="jumbotron">
                    <h1>Welkom op de Oogstplanner</h1>
                    <p>
                        Een dynamisch gereedschap voor een ieder met vruchtbare grond.<br/>
                        <span class="hidden-xs hidden-md">
                            <br/>Oogstplanner helpt je bepalen wanneer te zaaien en te oogsten. 
                            Of het nu gaat om een moestuin of een bloempot.
                        </span>
                    </p>
                </div>
                <div class="panel panel-default dark visible-xs">
                    <p>
                        @Html.ActionLink("Oogst of zaai een gewas", "SowingAndHarvesting",  "Home",  null, null)<br/>
                        <!-- @Html.ActionLink("Vind een andere gebruiker", "TODO",  "TODO",  null, null)<br/> -->
                        @Html.ActionLink("Bekijk je zaaikalender", "Year",  "Calendar",  null, null)<br/>
                        <!--@Html.ActionLink("Veelgestelde vragen lijst (FAQ)", "TODO",  "TODO",  null, null)<br/> -->
                    </p>
                </div>
            </div>
        </div> @* End first column *@

        <div class="col-lg-6 hidden-xs">
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <img src="/Content/Images/Draggable/harvesting.png" alt="oogsten of zaaien" /><br/>            
                    @Html.ActionLink("Oogst of zaai een gewas", "SowingAndHarvesting",  "Home", null, new { @class = "btn-lg btn-default no-underline" } )<br/><br/>
                    <!-- @Html.ActionLink("Vind een andere gebruiker", "TODO",  "TODO",  null, null)<br/> -->
                </div>
                <div class="col-lg-12 col-md-6 col-sm-6">
                    <img src="/Content/Images/Draggable/sowing.png" alt="zaaikalender" /><br/>
                    @Html.ActionLink("Bekijk je zaaikalender", "Year",  "Calendar", null, new { @class = "btn-lg btn-info no-underline" } )
                    <!--@Html.ActionLink("Veelgestelde vragen lijst (FAQ)", "TODO",  "TODO",  null, null)<br/> -->
                </div>
            </div>
        </div> @* End second column *@

    </div>@* End row *@
</div>@* End main login div *@

@* END RESPONSIVE RECTANGLES LAYOUT *@
