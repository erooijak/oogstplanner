@{
    ViewBag.Title = "Wachtwoord resetten";
}

<div class="flowtype-area">

<!-- START RESPONSIVE RECTANGLE LAYOUT -->

<!-- Top bar -->
<div id="top">
    <h1>Reset uw Zaaikalender wachtwoord.</h1>
</div>
 
<!-- Fixed main screen -->
<div id="login" class="bg imglogin">
   
    <div id="resetpasswordbox" style="padding: 3.5%; font-size: 12px;" class="mainbox span12">
