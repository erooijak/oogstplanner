@model ResetPasswordModel

@using (Html.BeginForm("ResetPassword", "Account", null, FormMethod.Post, new { @class="form-horizontal", @role="form"}))
{

    <div class="form-group">
        @Html.ValidationSummary()  
    </div>

    <div class="form-group">
        <div class="col-md-3 form-text">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="col-md-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nieuw wachtwoord", @AutoComplete ="off" } )
        </div>
    </div>

        <div class="form-group">
        <div class="col-md-3 form-text">
            @Html.LabelFor(m => m.ConfirmPassword)
        </div>
        <div class="col-md-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Bevestig nieuwe wachtwoord", @AutoComplete ="off" } )
        </div>
    </div>

    @Html.HiddenFor(m => m.ReturnToken)

    <div class="form-group">
        <!-- Button -->                                        
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp; Reset wachtwoord</button>
        </div>
    </div>

    <h2 class="form-text">@ViewBag.Message</h2>
}