@model LocalPasswordModel

<!-- Hide div initially-->
<style type="text/css">
    #foo
    {
        display: none;
    }
</style>


<a href="#" id="bar">Wachtwoord instellen</a>

<div id="foo">
    <br/>
    @using (Html.BeginForm("Manage", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <legend>Wachtwoord instellen</legend>
            <ol>
                <li>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Wachtwoord" })
                </li>
                <li>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Bevestig wachtwoord" })
                </li>
            </ol>
            <button class="btn btn-sogyo" type="submit" name="provider">Bevestigen</button>
        </fieldset> 
    }
    <br />
</div>

